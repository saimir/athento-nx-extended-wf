				</row>
			</rows>
			<widget name="selectUser" type="singleUserSuggestion">
				<labels>
					<label mode="any">label.athento-nx-extended-wf-generic.selectUserTask</label>
				</labels>
				<translated>true</translated>
				<fields>
					<field>['approvalUser']</field>
